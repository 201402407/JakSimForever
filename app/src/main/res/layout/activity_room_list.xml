<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/white"
                  android:orientation="vertical"
                  tools:context=".RoomListActivity">

        <android.support.design.widget.CoordinatorLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.design.widget.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/TabTheme">

                <android.support.design.widget.TabLayout
                        android:id="@+id/durationTabLayout"
                        android:layout_width="match_parent"
                        app:tabIndicatorAnimationDuration="3000"
                        android:layout_height="wrap_content" />

            </android.support.design.widget.AppBarLayout>

        </android.support.design.widget.CoordinatorLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fragmentView"
                android:layout_marginLeft="@dimen/RoomListLayoutMargin"
                android:layout_marginRight="@dimen/RoomListLayoutMargin">

        </FrameLayout>
        <!--<android.support.v4.view.ViewPager-->
                <!--android:id="@+id/roomListViewPager"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginLeft="@dimen/RoomListLayoutMargin"-->
                <!--android:layout_marginRight="@dimen/RoomListLayoutMargin">-->

        <!--</android.support.v4.view.ViewPager>-->
    </LinearLayout>
</layout>